<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:elevation="0dp"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_gravity="right">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/menu_button"
                app:rippleColor="#20ffffff"
                android:layout_width="34dp"
                android:layout_height="46dp"
                android:textAllCaps="false"
                android:layout_marginRight="10dp"
                android:paddingLeft="5dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/colorPrimary"
                android:elevation="0dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:textColor="#ffffff"
                android:textSize="17sp"
                app:cornerRadius="100dp"
                app:icon="@drawable/points_to_cross"
                app:strokeColor="#00000000"
                app:iconTint="#ffffff"/>


        </LinearLayout>


    </androidx.appcompat.widget.Toolbar>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize">

        <!--This the interface sitting behind the backdrop and shown when it is collapsed-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:id="@+id/background_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeWidth="0dp"
                    android:text="Segnala utente"
                    app:rippleColor="#10ffffff"
                    android:textColor="#ffffff"
                    android:textAllCaps="false"
                    android:textSize="17sp"
                    android:gravity="left"/>

            </LinearLayout>

        </LinearLayout>

        <!--This is the backdrop's content with a BottomSheetBehaviour applied to it-->
        <com.keiken.view.backdrop.BackdropFrontLayer
            android:id="@+id/backdrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:elevation="1dp"
            app:layout_behavior="com.keiken.view.backdrop.BackdropFrontLayerBehavior">

            <!--This is the backdrop's header with a title and icon-->
            <!--     <android.support.v7.widget.LinearLayoutCompat
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:clickable="true"
                     android:background="@drawable/backdrop_background"
                     android:paddingTop="15dp"
                     android:paddingHorizontal="15dp"
                     app:behavior_peekHeight="56dp">

                     <TextView
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_weight="1"
                         android:text="Bologna"
                         android:textSize="17dp"
                         android:textColor="#000000"/>

                 </android.support.v7.widget.LinearLayoutCompat>  -->

            <!--And finally this is the body of the backdrop's content. You can add here whatever you need inside a view group (LinearLayout, RelativeLayout, SwipeRefreshLayout, ConstraintLayout, etc.)-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:id="@+id/swiperefresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:behavior_peekHeight="64dp"
                android:background="@drawable/backdrop_background">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/up_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/white_to_black_up_arrow"
                        android:layout_gravity="right|top"
                        android:layout_margin="15dp"/>


                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="none"
                        android:paddingTop="15dp">




                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="13dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_marginHorizontal="15dp">

                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center">


                                    <androidx.cardview.widget.CardView
                                        android:layout_width="162dp"
                                        android:layout_height="162dp"
                                        android:elevation="24.3dp"
                                        android:id="@+id/view2"
                                        app:cardCornerRadius="81dp"
                                        android:innerRadius="0dp"
                                        android:shape="ring"
                                        android:thicknessRatio="1.9">


                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="162dp"
                                            android:id="@+id/profile_pic"
                                            android:layout_centerHorizontal="true"
                                            android:scaleType="centerCrop"
                                            android:src="@mipmap/avatar"/>
                                    </androidx.cardview.widget.CardView>



                                </FrameLayout>



                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginLeft="17dp"
                                    android:layout_gravity="center">


                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:textColor="#000000"
                                        android:textSize="24dp"
                                        android:id="@+id/user_name"
                                        android:text="Nome"
                                        android:gravity="center"
                                        android:layout_marginBottom="7dp"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="#000000"
                                        android:textSize="16sp"
                                        android:text=""
                                        android:gravity="center"
                                        android:layout_marginBottom="7dp"/>


                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_gravity="center"
                                        android:layout_marginBottom="10dp">


                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_verified_user"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Utente verificato"
                                            android:textSize="16dp"
                                            android:textColor="#000000"/>

                                    </LinearLayout>


                                    <com.google.android.material.button.MaterialButton
                                        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:backgroundTint="@color/colorPrimary"
                                        android:paddingHorizontal="20dp"
                                        android:text="Contatta"
                                        android:textAllCaps="false"
                                        app:rippleColor="#40ffffff"
                                        android:textColor="#ffffff"
                                        android:textSize="17sp"
                                        app:icon="@drawable/ic_mail"
                                        app:iconTint="#ffffff"
                                        android:visibility="gone"/>

                                </LinearLayout>


                            </LinearLayout>



                            <!--Bio-->
                            <TextView
                                android:id="@+id/bio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"
                                android:textSize="16dp"
                                android:text=""
                                android:gravity="center"
                                android:paddingHorizontal="15dp"
                                android:paddingTop="14dp"
                                android:paddingBottom="14dp"/>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center">



                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textColor="#000000"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:text="22 Recensioni"
                                    android:gravity="center"/>

                                <RatingBar
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="-15dp"
                                    android:layout_marginBottom="-15dp"
                                    android:isIndicator="true"
                                    android:rating="3.4"
                                    android:stepSize="0.01"
                                    android:numStars="5"
                                    android:scaleX="0.4"
                                    android:scaleY="0.4"
                                    android:outlineSpotShadowColor="@color/colorPrimary"
                                    android:theme="@style/RatingTheme"
                                    android:outlineAmbientShadowColor="@color/colorPrimary"/>

                                <TextView
                                    android:id="@+id/reviews_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textColor="#000000"
                                    android:textSize="16sp"
                                    android:text="@string/reviews"
                                    android:gravity="center"
                                    android:layout_marginBottom="10dp"/>




                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#dddddd"
                                android:layout_marginHorizontal="15dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="5dp"/>

                            <TextView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:text="Esperienze"
                                android:layout_marginBottom="5dp" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/esperienze"
                                android:nestedScrollingEnabled="false"/>


                            <com.keiken.view.RecyclerViewHeader
                                android:id="@+id/rvHeader"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </com.keiken.view.RecyclerViewHeader>

                        </LinearLayout>



                    </ScrollView>

                </FrameLayout>


            </androidx.appcompat.widget.LinearLayoutCompat>

        </com.keiken.view.backdrop.BackdropFrontLayer>




    </androidx.coordinatorlayout.widget.CoordinatorLayout>



</FrameLayout>